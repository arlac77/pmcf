{
  "name": "pmcf",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "npm@11.6.0+sha512.77f3fb0dbbd881835d7bd1217deabdf7ed77fc4ec4f363df64fc3cb986404abf6c437661041080f5c5d225103508e7c9ea30cb2742b7e942675d05a10af2d7b9",
  "exports": {
    ".": {
      "default": "./src/module.mjs"
    }
  },
  "description": "Poor mans configuration management",
  "keywords": [
    "bind",
    "chrony",
    "config",
    "config management",
    "dhcp",
    "dns",
    "influxdb",
    "iwd",
    "kea",
    "keepalived",
    "mosquitto",
    "openldap",
    "openldap",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "bin": {
    "pmcf-info": "./bin/pmcf-info",
    "pmcf-network": "./bin/pmcf-network",
    "pmcf-package": "./bin/pmcf-package"
  },
  "scripts": {
    "prepare": "node --run prepare:typescript",
    "prepare:typescript": "tsc --allowJs --declaration --emitDeclarationOnly --declarationDir types --resolveJsonModule --target esnext -m esnext --module nodenext --moduleResolution nodenext --rootDir src ./src**/*.mjs",
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src**/*.mjs",
    "lint": "node --run lint:docs && node --run lint:typescript",
    "lint:docs": "documentation lint ./src**/*.mjs",
    "lint:typescript": "tsc --allowJs --checkJs --noEmit --resolveJsonModule --target esnext -m esnext --module nodenext --moduleResolution nodenext ./src**/*.mjs"
  },
  "dependencies": {
    "ip-utilties": "^1.4.9",
    "npm-pkgbuild": "^18.3.10",
    "pacc": "^4.39.4",
    "package-directory": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "documentation": "^14.0.3",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/pmcf.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/pmcf/issues"
  },
  "homepage": "https://github.com/arlac77/pmcf#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-node-app",
      "arlac77/template-typescript"
    ]
  }
}
