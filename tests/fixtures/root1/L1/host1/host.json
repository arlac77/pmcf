{
  "priority": 11,
  "os": "linux",
  "depends": ["d1", "d2-${os}"],
  "replaces": ["r1", "r2-${os}"],
  "provides": ["p1", "p2-${os}"],
  "extends": [
    "/model/m1",
    "/model/${os}",
    "/services/arch-linux",
    "/services/timemachine",
    "/services/openldap",
    "/services/mosquitto",
    "/services/postfix"
  ],
  "networkInterfaces": {
    "eth0": {
      "kind": "ethernet",
      "network": "/L1/n1",
      "ipAddresses": "192.168.1.1"
    }
  },
  "services": {
    "alpm-repo": {
      "base": "/binaries/linux/arch/$repo/$arch",
      "architectures": ["aarch64", "x86", "armv7"],
      "repositories": {
        "mf-private": {},
        "mf-public": {}
      }
    },
    "influxdb": {},
    "postfix": {},
    "mosquitto": {
      "acl_file": "/etc/mosquitto/acl"
    },
    "dns": { "alias": "dns" },
    "openldap": {
      "alias": "ldap",
      "base": "${ldap_base}",
      "uri": "ldap://"
    },
    "chrony": {
      "alias": "ntp",
      "source": "/GLOBAL"
    }
  }
}
